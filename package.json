{
  "name": "afit",
  "scripts": {
    "dev": "bun run --hot src/index.tsx",
    "format": "bunx biome check --write src",
    "format:watch": "bunx nodemon --watch \"src\" --ext \"ts,tsx\" --exec \"bunx biome check --fix --unsafe src\"",
    "tailwind:watch": "bunx tailwindcss --input ./src/index.css --output ./src/public/output.css --watch"
  },
  "dependencies": {
    "hono": "^4.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/bun": "latest",
    "nodemon": "^3.1.7",
    "tailwindcss": "^3.4.13"
  }
}